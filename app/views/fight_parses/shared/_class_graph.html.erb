<section>
  <h4><%= title %></h4>
  <div class="row">
    <div class="col-md-9">
      <div class="section-desc"><%= desc %></div>
    </div>
  </div>
  <div id="graph-<%= graph_type %>" class="graph" style="width:100%; height:400px;">
    <div style="display:table; width: 100%; height: 100%; background-color: #eeeeee;">
      <div class="msg" style="display:table-cell; text-align: center; vertical-align: middle;">Loading graph...</div>
    </div>
  </div>
</section>

<script>
$(function () {
  $.ajax({
    url: '<%= report_load_class_graph_path(@report.report_id, @fight.fight_id, @fp.player_id, {graph_type: graph_type}) %>',
    cache: false
  });
})
</script>
